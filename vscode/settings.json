{
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "window.zoomLevel": 0,
  "files.insertFinalNewline": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  "terminal.external.osxExec": "iTerm.app",

  "go.gopath": "",
  "go.goroot": "",
  "go.gocodeAutoBuild": true,
  "go.lintOnSave": "package",
  "go.vetOnSave": "package",
  "go.buildOnSave": "package",
  "go.formatTool": "goimports",
  "go.autocompleteUnimportedPackages": true,

  "python.linting.pylintEnabled": true,
  "python.pythonPath": "${env.CONDA_PREFIX}/bin/python",
  "python.jediEnabled": false,
  "python.linting.pylintPath": "${env.CONDA_PREFIX}/bin/pylint",
  "python.formatting.provider": "yapf",
  "python.formatting.yapfPath": "${env.CONDA_PREFIX}/bin/yapf",
  "python.formatting.yapfArgs": [
    "--style",
    "{based_on_style: google, indent_width: 2}"
  ],

  "C_Cpp.clang_format_fallbackStyle": "Google",

  "bashBeautify.tabSize": 2,

  "gitlens.keymap": "chorded",
  "gitlens.historyExplorer.enabled": true,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "githubPullRequests.hosts": [
    {
      "host": "https://github.com",
      "username": "oauth",
      "token": "system"
    }
  ],

  "vsicons.dontShowNewVersionMessage": true,
  "workbench.iconTheme": "vscode-icons",

  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (Eex)"
  ],

  "prettier.arrowParens": "avoid",
  "prettier.bracketSpacing": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5"
}
